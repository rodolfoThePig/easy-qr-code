{
  "name": "easy-qr",
  "version": "0.0.2",
  "description": "Minimal web app to generate QR Codes from an URL or just plain text",
  "scripts": {
    "start": "npm run dev",
    "dev": "npx run-p build-watch assets-watch serve",
    "build": "npx esbuild src/main.ts --bundle --outfile=main.js",
    "build-watch": "npm run build -- --watch",
    "build-prod": "npm run build -- --minify",
    "assets": "copy src\\index.html index.html",
    "assets-watch": "chokidar \"src/**/*.html\" -c \"npm run assets\" --verbose",
    "serve": "cd www && npx snowpack dev"
  },
  "author": "Vitor B Barbieri",
  "license": "MIT",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.12.28",
    "npm-run-all": "^4.1.5",
    "snowpack": "^3.8.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "chota": "^0.8.0",
    "qrcode": "^1.4.4"
  }
}
